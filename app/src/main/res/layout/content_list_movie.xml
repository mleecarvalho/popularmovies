<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="stageone.popularmovies.carvalho.marcio.project.com.popularmoviesstage1.dashboard.ListMovieActivity"
    tools:showIn="@layout/activity_list_movie"
    >


  <android.support.v7.widget.RecyclerView
      android:id="@+id/list_movie_recycleview"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/black"/>

  <ProgressBar
      android:id="@+id/list_move_progressbar"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:layout_gravity="center"
      android:visibility="invisible"/>

</FrameLayout>
